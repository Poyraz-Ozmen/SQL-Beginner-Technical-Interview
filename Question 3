#include <iostream>
using namespace std;

int swap_without_third_variable(int &x, int &y) 
{ 
    // Code to swap 'x' and 'y' in C++ 
    x = x + y; 
    y = x - y; 
    x = x - y; 
    cout<<"After Swap: x ="<<x<<"and y= "<<y;
}  

int main()
{
	int a=1;
	int b=2;
	cout<<"before swap a= "<< a <<", b is equal to"<< b <<endl;
	swap_without_third_variable(a, b);
  return 0;
}
